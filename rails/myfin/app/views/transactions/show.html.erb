<p id="notice"><%= notice %></p>

<p>
  <b>Realization date:</b>
  <%= @transaction.realization_date %>
</p>

<p>
  <b>Amount:</b>
  <%= @transaction.amount %>
</p>

<p>
  <b>Description:</b>
  <%= @transaction.description %>
</p>

<p>
  <b>Account:</b>
  <%= Account.find(@transaction.account_id).name %>
</p>

<p>
  <b>Category:</b>
  <%= Category.find(@transaction.category_id).name unless @transaction.category_id.nil? %>
</p>


<%= link_to 'Edit', edit_transaction_path(@transaction) %> |
<%= link_to 'Back', transactions_path %>
