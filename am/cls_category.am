-- [[kategorie_transakce]]
class Category 
attributes
  -- [[jmeno_kategorie_transakce]]
  name: String
  -- [[popis_kategorie_transakce]]
  descr: String
end

composition CategoryDirection between
  Category[1]
  -- [[smer_transakce_pro]]
  Direction[1]
end


constraints

context Category
  inv inv1: Category.allInstances->forAll(i1,i2 | i1 <> i2 implies i1.name <> i2.name)
  inv inv2: name <> null
  inv inv3: direction <> null
  inv inv4: name.size <= 20
  inv inv5: descr.size <= 80
